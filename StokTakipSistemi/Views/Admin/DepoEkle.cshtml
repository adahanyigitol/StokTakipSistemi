@model StokTakipSistemi.Models.DEPO
@{
    ViewBag.Title = "DepoEkle";
}

<h2>DepoEkle</h2>

@using (Html.BeginForm("DepoEkle", "Admin", FormMethod.Post))
{

    <div class="form-group">
        <label style="font-size:16px;"><b>Adı</b></label>

        @Html.TextBoxFor(m => m.DEPO_ADI, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.DEPO_ADI, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label style="font-size:16px;"><b>Statu</b></label>

        @Html.TextBoxFor(m => m.STATU, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.STATU, "", new { @class = "text-danger" })
    </div>


    <div class="form-group">
        <button type="submit" class="btn btn-primary">Depoyu Ekle</button>
    </div>
    if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
    }
}

