@model StokTakipSistemi.Models.DEPO
@{
    ViewBag.Title = "Depo Güncelle";
}

<body>
    <br />
    <br />
    <br />
    @using (Html.BeginForm("DepoGüncelle", "Admin", FormMethod.Post))
    {
        @Html.HiddenFor(x => x.DEPO_ID)

        <div style="margin-bottom:295px">
            <h2 style="margin-left:155px; font-size:30px;"><b>Depo</b></h2>
            <br />
            <table class="tbl">
                <tr>
                    <th>
                        <label style="font-size:14px">Depo Adı: </label>
                    </th>
                    <td>
                        @Html.TextBoxFor(x => x.DEPO_ADI, new { @class = "form-control", @placeholder = "Depo Adı..." })
                    </td>
                </tr>
                <tr>
                    <th>
                        <label style="font-size: 14px">Statü: </label>
                    </th>
                    <td>
                        @Html.TextBoxFor(x => x.STATU, new { @class = "form-control", @placeholder = "Statü..." })
                    </td>
                </tr>
                <tr>
                    <th>
                        <label style="font-size: 14px">Creator: </label>
                    </th>
                    <td>
                        @Html.TextBoxFor(x => x.OLUSTURAN_KULLANICI, new { @class = "form-control", @readonly = true, @placeholder = "Creator..." })
                    </td>
                </tr>
                <tr>
                    <th>
                        <label style="font-size: 14px">Creation Date: </label>
                    </th>
                    <td>
                        @Html.TextBoxFor(x => x.OLUSTURMA_TARIHI, new { @class = "form-control", @readonly = true, @placeholder = "Creation Date..." })
                    </td>
                </tr>
                <tr>
                    <th>
                        <label style="font-size: 14px">Updater: </label>
                    </th>
                    <td>
                        @Html.TextBoxFor(x => x.GUNCELLEYEN_KULLANICI, new { @class = "form-control", @readonly = true, @placeholder = "Updater..." })
                    </td>
                </tr>
                <tr>
                    <th>
                        <label style="font-size:14px">Update Date: </label>
                    </th>
                    <td>
                        @Html.TextBoxFor(x => x.GUNCELLEME_TARIHI, new { @class = "form-control", @readonly = true, @placeholder = "Update Date..." })
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        <br />
                        <input type="submit" value="Update" class="btn btn-danger" />
                    </td>
                    <td>
                        <br />
                        <button class="btn btn-warning" onclick="location.href='@Url.Action("DepoSayfasi", "Admin")'; return false;">Cancel</button>
                    </td>
                </tr>
            </table>
        </div>
    }
</body>
